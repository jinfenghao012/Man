<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    

    <style name="Control"></style>

    <style name="Layout.Toolbar" parent="Control">

        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ImageView.Toolbar" parent="Control">
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@drawable/selector_color_main_add</item>
    </style>

    <style name="EditText.Search" parent="Control">
        <item name="android:focusable">false</item>
        <item name="android:hint">搜索一下</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">34dip</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/greySub</item>
        <item name="android:drawableRight">@mipmap/ic_edit_search</item>
        <item name="android:background">@drawable/bg_edit_text_search</item>
    </style>
    <style name="Layout.Main" parent="Control">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Layout.SwipeRefresh" parent="Control">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="TextView.Status" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">正在加载...</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textColor">@color/greyAdd</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <!--<item name="android:background">@drawable/selector_color_white_add</item>-->
    </style>

    <style name="ListView.Line" parent="Control">
        <item name="android:dividerHeight">1px</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="Layout.Linear" parent="Control">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EditText.Search1" parent="Control">
       <item name="android:maxLength">1</item>
        <item name="android:hint">搜索一下</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">34dip</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColorHint">@color/greySub</item>
        <item name="android:background">@drawable/bg_edit_text_search</item>
    </style>

    <style name="Spinner.Toolbar" parent="Control">
        <item name="android:layout_width">64dip</item>
        <item name="android:layout_height">34dip</item>
        <item name="android:layout_marginRight">4dip</item>
    </style>
    

</resources>
